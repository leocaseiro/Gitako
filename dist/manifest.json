{
  "manifest_version": 2,
  "name": "Gitako - Github file tree",
  "version": "1.0.1",
  "description": "The missing part of GitHub.",
  "author": "EnixCoda",
  "icons": {
    "64": "icons/Gitako-64.png",
    "128": "icons/Gitako-128.png",
    "256": "icons/Gitako-256.png"
  },
  "homepage_url": "https://github.com/EnixCoda/Gitako",
  "permissions": [
    "contextMenus",
    "storage",
    "*://*.github.com/*",
    "*://*.sentry.io/*"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "icons/vscode/*",
    "content.css"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "firefox-shim.js",
        "browser-polyfill.js",
        "content.js"
      ]
    }
  ]
}
